---
const PROJECTS = [
    {
        title: 'Project 1',
        description: 'Lorem ipsum dolor sit amet, consectetur',
        link:  '#',
        github: '#',
        image: 'https://via.placeholder.com/300x200',
        tags: ['HTML', 'CSS', 'JavaScript']
    }
]
---

{
    PROJECTS.map(({ image, title, description, tags }) =>(
        <article>
            <h3 class="text-2xl font-semibold text-yellow-200 mb-200">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul>
                {tags.map(tag =>(
                    <li>{tag.name}</li>
                ))}
            </ul>
            <img src={image} alt={`Captura de pantalla del proyecto ${image}`} />
        </article>
    ))
}
